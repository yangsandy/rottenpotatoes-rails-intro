-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      -# Reference: https://stackoverflow.com/questions/15979489/give-a-haml-link-an-id
      %th{:class => @title_header}
      #%a#title_header{:href => "/movies?sort=title"} Movie Title
      %th Rating
      %th{:class => @release_header} = link_to "Release Date", movies_path()
      -#%a#release_header{:href => "/movies?sort=release_date"} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
